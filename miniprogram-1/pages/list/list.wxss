.widget {
  position: relative;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  padding-top: 0rpx;
  padding-bottom: 0rpx;
  border: #ddd 1px solid;
  display: flex;
  justify-content: space-between;
  width: 100%;
  background-color: white;
  border-radius:5px;
}

.container {
  height: 100%;
  display: table;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  text-align: center;
  width: 100%;
}

.imgFa {
  width: 300rpx;
}

.widget-right {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.link-column {
  width: 6rem;
  display: table-cell;
  margin-top: 40rpx;
}

.link {
  color: black;
  display: inline-table;
  
}
.column{
  margin-top: 20rpx;
}
